{
  "name": "dataloaderx",
  "version": "0.0.0",
  "description": "DataLoaderX is an expansion upon DataLoader, designed to abstract some details away, and add common functionality",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --project tsconfig.build-cjs.json",
    "build:esm": "tsc --project tsconfig.build-esm.json",
    "build:watch": "tsc --watch",
    "lint:code": "eslint src",
    "lint:style": "prettier --check src",
    "release": "semantic-release",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "dataloader",
    "graphql",
    "cache",
    "caching",
    "batch",
    "batching"
  ],
  "author": {
    "name": "Ben Ezard",
    "email": "ezard.ben@gmail.com",
    "url": "ezard.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ezard/dataloaderx"
  },
  "license": "MIT",
  "dependencies": {
    "dataloader": "^2.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.1.1",
    "@semantic-release/npm": "7.0.6",
    "@types/jest": "26.0.14",
    "@typescript-eslint/eslint-plugin": "4.5.0",
    "@typescript-eslint/parser": "4.5.0",
    "eslint": "7.11.0",
    "eslint-config-prettier": "6.13.0",
    "eslint-plugin-import": "2.22.1",
    "jest": "26.6.0",
    "prettier": "2.1.2",
    "semantic-release": "17.2.1",
    "ts-jest": "26.4.1",
    "typescript": "4.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "index.ts",
      ".spec.ts"
    ]
  }
}
